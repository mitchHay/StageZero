---
const date = new Date();
const githubBase = 'https://github.com/mitchHay/StageZero/';
const githubLink = `${githubBase}blob/main/`;
const licenseLink = `${githubLink}LICENSE`;
const contributeLink = `${githubLink}CONTRIBUTING`;
import { version } from '../../../package.json';
---

<footer class="footer">
  <p>{`Â© ${date.getFullYear()} StageZero`}</p>
  <ul>
    <li>
      <a href={licenseLink}>License</a>
    </li>
    <li>
      <a href={contributeLink}>Contribute</a>
    </li>
    <li>
      <a href=`${githubBase}tree/${version}`>Latest v{ version }</a>
    </li>
  </ul>
</footer>

<style lang="scss">
  .footer {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: .5rem;

    > * {
      &:not(:last-child) {
        &::after {
          content: '|';
          display: inline-block;
          margin-left: .5rem;
        }
      }
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0 !important;

      li {
        display: inline-block;
        margin-top: 0 !important;

        &:not(:first-child) {
          margin-left: .5rem;
        }

        a {
          text-decoration: none;
          color: var(--sl-color-text);
        }
      }
    }
  }
</style>